<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fetcher.musicman.Activity.DetailPage">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="download progress"
    android:id="@+id/download_progress"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/textView_title" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_title"
        android:layout_alignEnd="@+id/textView_title"
        android:layout_marginTop="25dp"
        android:id="@+id/textView_singer" />

   <ListView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/textView_singer"
       android:id="@+id/youtube_listview"></ListView>
</RelativeLayout>
